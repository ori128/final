<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#3B82F6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="יצירת פגישה חדשה"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F3F4F6"
                        android:hint="כותרת הפגישה"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="סוג הפגישה:"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rg_meeting_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_physical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:checked="true"
                            android:text="פגישה פיזית" />

                        <RadioButton
                            android:id="@+id/rb_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="פגישה מקוונת (Online)" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F3F4F6"
                        android:drawableStart="@android:drawable/ic_menu_mylocation"
                        android:drawablePadding="8dp"
                        android:hint="מיקום"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:endIconMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_date_picker"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#F3F4F6"
                            android:clickable="true"
                            android:drawableStart="@android:drawable/ic_menu_my_calendar"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="בחר תאריך"
                            android:inputType="none"
                            android:paddingHorizontal="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_start_time"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#F3F4F6"
                            android:clickable="true"
                            android:drawableStart="@android:drawable/ic_menu_recent_history"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="התחלה"
                            android:inputType="none"
                            android:paddingHorizontal="16dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_end_time"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#F3F4F6"
                            android:clickable="true"
                            android:drawableStart="@android:drawable/ic_menu_recent_history"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="סיום"
                            android:inputType="none"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_add_participants"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#E0E7FF"
                        android:text="הוסף משתתפים +"
                        android:textColor="#3B82F6"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconTint="#3B82F6" />

                    <TextView
                        android:id="@+id/tv_participants_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="אף משתתף לא נבחר"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="#F3F4F6"
                        android:gravity="top|start"
                        android:hint="תיאור הפגישה"
                        android:padding="16dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_save_event"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#3B82F6"
                        android:text="צור פגישה"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#EF4444"
                android:text="ביטול"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>