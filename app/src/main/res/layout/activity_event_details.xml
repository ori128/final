<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#3B82F6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="פרטי הפגישה"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="כותרת הפגישה"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_detail_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="סוג הפגישה"
                        android:textSize="14sp"
                        android:textColor="#3B82F6"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tv_detail_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="תאריך ושעה"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B5563"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="מיקום"
                        android:drawableStart="@android:drawable/ic_menu_mylocation"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"
                        android:textColor="#4B5563"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="תיאור:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אין תיאור"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="משתתפים:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_detail_participants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="טוען משתתפים..."
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_back_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#3B82F6"
                android:text="חזור לעמוד הבית"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>