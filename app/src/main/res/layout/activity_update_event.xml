<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F9F9F9"
    tools:context=".UpdateEvent">

    <TextView
        android:id="@+id/tvUpdateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עדכון פרטי פגישה"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etUpdateEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="כותרת הפגישה"
        android:inputType="text"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvUpdateTitle"/>

    <EditText
        android:id="@+id/etUpdateEventDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="תיאור"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/etUpdateEventTitle"/>

    <EditText
        android:id="@+id/etUpdateEventDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="תאריך ושעה (yyyy-MM-dd HH:mm)"
        android:inputType="datetime"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/etUpdateEventDesc"/>

    <EditText
        android:id="@+id/etUpdateEventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מיקום"
        android:inputType="text"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/etUpdateEventDateTime"/>

    <Button
        android:id="@+id/btnSaveUpdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="שמור שינויים"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etUpdateEventLocation"/>

    <Button
        android:id="@+id/btnBackFromUpdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ביטול"
        android:backgroundTint="#9E9E9E"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnSaveUpdate"/>

</androidx.constraintlayout.widget.ConstraintLayout>
